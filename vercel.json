{
  "version": 2,
  "buildCommand": "npm run build",
  "outputDirectory": "dist",
  "rewrites": [
    {
      "source": "/sitemap.xml",
      "destination": "/api/seo?sitemap=1"
    },
    {
      "source": "/robots.txt",
      "destination": "/api/seo"
    },
    {
      "source": "/api/:path*",
      "destination": "/api/:path*"
    }
  ]
}
