{
  "buildCommand": "npm run build",
  "outputDirectory": "dist",
  "env": {
    "NODE_ENV": "production"
  },
  "functions": {
    "server/server.ts": {
      "runtime": "nodejs18.x",
      "memory": 512
    }
  },
  "routes": [
    {
      "src": "/sitemap.xml",
      "dest": "/server/server.ts"
    },
    {
      "src": "/robots.txt",
      "dest": "/server/server.ts"
    },
    {
      "src": "/api/(.*)",
      "dest": "/server/server.ts"
    },
    {
      "src": "/(.*)",
      "dest": "/index.html"
    }
  ]
}
